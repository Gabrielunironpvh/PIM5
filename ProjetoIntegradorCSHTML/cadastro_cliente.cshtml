
    @{
        string nomeArquivo = "";
        string ext = "";
 


        Validation.RequireField("nome", "O nome do Cliente é obrigatorio");
        Validation.RequireField("Contato", "O Contato do cliente é obrigatorio");
        Validation.RequireField("CPF", "O CPF do cliente é obrigatorio");
        Validation.RequireField("Endereco", "O Endereço do Cliente é obrigatorio");
        Validation.RequireField("Bairro", "O Bairro do cliente é obrigatorio");
        Validation.RequireField("Cidade", "A cidade do cliente é obrigatorio");

    
        if (IsPost && Validation.IsValid())
        {

            var db = WebMatrix.Data.Database.Open("SCS");
            var Sql = "insert into Cliente(Nome,cpf,Contato,Endereco,Bairro,Cidade) values(@0, @1, @2,@3,@4,@5)";
            int result = db.Execute(Sql,
                Request.Form["nome"],
                Request.Form["cpf"],
                Request.Form["contato"],
                Request.Form["endereco"],
                Request.Form["bairro"],
                Request.Form["cidade"]);
            db.Close();
            if (result == 1)
            {
                Response.Redirect("~/cliente");
            }

        }
        Page.Title = "Página Detalhe de Veículo";
        Layout = "_layout.cshtml";


    }
    @nomeArquivo
    @ext
    @Html.ValidationSummary()



    <div class="row">
        <div class="col-lg-12" id="interface">
            <h1>
                Novo Cliente
            </h1>
            <div class="col-lg-12 borda-cadastro">
                <form method="post" action="">
                    <fieldset class="grupo">
                        <legend>Dados do Cliente</legend>
                        <div class="form-group col-lg-8">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control " name="nome" id="nome" />
                        </div>

                    </fieldset>
                    <fieldset class="grupo">
                        <div class="form-group col-lg-4">
                            <label for="contato">Contato</label>
                            <input type="text" class="form-control" name="contato" id="contato" value="" />
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="Cpf">CPF</label>
                            <input type="text" class="form-control" name="cpf" id="cpf" value="" />
                        </div>


                    </fieldset>
                    <fieldset class="grupo">
                        <div class="form-group col-lg-8">
                            <label for="cpf">Endereço</label>
                            <input type="text" class="form-control" name="endereco" id="endereco" value="" />
                        </div>
                        <div class="form-group col-lg-2">

                        </div>
                    </fieldset>
                    <fieldset class="grupo">
                        <div class="form-group col-lg-8">
                            <label for="nome">Bairro</label>
                            <input type="text" class="form-control" name="bairro" id="bairro" value="" />
                        </div>
                        <div class="form-group col-lg-1">


                        </div>
                    </fieldset>
                    <div class="form-group col-lg-8">
                        <label for="contato">Cidade</label>
                        <input type="text" class="form-control" id="cidade" name="cidade" value="" />
                    </div>
                    </fieldset>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-success"> Salvar</button>
                        
                        <button type="reset" class="btn btn-default" name="reset">Limpar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>