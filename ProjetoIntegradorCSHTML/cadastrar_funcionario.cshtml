@{
        string nomeArquivo = "";
        string ext = "";



        Validation.RequireField("nome", "O nome do Funcionario é obrigatorio");
        Validation.RequireField("Contato", "O Contato do Funcionario é obrigatorio");
        Validation.RequireField("CPF", "O CPF do Funcionario é obrigatorio");
        Validation.RequireField("Endereco", "O Endereço do Funcionario é obrigatorio");
        Validation.RequireField("Bairro", "O Bairro do Funcionario é obrigatorio");
        Validation.RequireField("Cidade", "A cidade do Funcionario é obrigatorio");
        Validation.RequireField("NivelDeAcesso", "O Nivel De Acesso do Funcionario é obrigatorio");


        if (IsPost && Validation.IsValid())

    {


        var db = WebMatrix.Data.Database.Open("SCS");
        var Sql = "insert into FUNCIONARIO(Nome,cpf,Contato,Endereco,Bairro,Cidade,NivelDeAcesso) values(@0, @1, @2,@3,@4,@5,@6)";
        int result = db.Execute(Sql,
            Request.Form["nome"],
            Request.Form["cpf"],
            Request.Form["contato"],
            Request.Form["endereco"],
            Request.Form["bairro"],
            Request.Form["cidade"],
            Request.Form["niveldeacesso"]);
        db.Close();
        if (result == 1)
        {
            Response.Redirect("~/funcionario");
        }

    }
    Page.Title = "Página Detalhe de Veículo";
    Layout = "_layout.cshtml";


}
