@{
    Layout = "_layout.cshtml";
    var conexão = WebMatrix.Data.Database.Open("SCS");

   var cliente = conexão.Query("select * from CLIENTE");

   conexão.Close(); 
}


<body>
    

   <div class="row">
     <div class="col-lg-12">
     <div class="panel panel-default">
     <div class="panel-body">
     <table width="100%" class="table table-striped table-bordered table-hover">
     <div class="row">
     <div class="col-lg-12">
    <div class="panel panel-default">

    <div class="col-lg-12">
                      <br />
    <a href="~/cadastro_cliente.cshtml" class="btn btn-primary btn-lg"> + Adicionar Cliente</a>
   </div>

     <div class="col-lg-12" id="tabela">
     <label for="pesquisar">Pesquisar
     <input type="text" name="pesquisar" id="pesquisar">
     </label>            
         <thead> <tr>
     <th class="nome-cliente">Nome</th>
     <th class="telefone-cliente">contato</th>
                     <th class="CPF"> CPF
                     <th data-orderable="false" id="acoes"><font color="#FFFFFF">InformaçõesDos</font></th>
       </thead>
     @foreach (var i in cliente){
       <tr class="odd gradeX">                                                   
         <td>@i.Nome</td>
         <td>@i.Contato</td>
         <td>@i.Cpf</td>


         <td class="btnAcoes">
       <a href="~/Detalhe.cshtml" class="btn btn-info">Visualizar</a></td></tr>

     }
         </tbody>
         </table>
     </div>
     </div>
     </div>
   </div>
    </div>

</body>
</html>

