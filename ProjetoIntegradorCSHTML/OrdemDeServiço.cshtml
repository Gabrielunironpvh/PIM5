@{
    Layout = "_layout.cshtml";
    var conexão = WebMatrix.Data.Database.Open("SCS");

    var ordemdeserviço = conexão.Query("select * from Ordem_De_Servico");

    conexão.Close();
} 


            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="panel panel-default">

                                            <div class="col-lg-12">

                                                <br />
                                                <a href="~/CadastrarOrdemdeServiço.cshtml" class="btn btn-primary btn-lg"> + Adicionar Ordem de Serviço</a>
                                            </div>

                                            <div class="col-lg-12" id="tabela">
                                                <label for="pesquisar">
                                                    Pesquisar
                                                    <input type="text" name="pesquisar" id="pesquisar">
                                                </label>
                                                <thead>
                                                    <tr>
                                                        <th class="nome-cliente">Nome do Cliente</th>
                                                        <th class="telefone-cliente">Serviço</th>
                                                        <th class="CPF">Funcionario</th>
                                                        <th class="nome-cliente">Celular</th>
                                                        <th class="telefone-cliente">Data</th>
                                                        <th class="CPF"> Valor Total</th>

                                                        <th data-orderable="false" id="acoes">Ações</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var o in ordemdeserviço)
                                                    {
                                                        <tr class="odd gradeX">
                                                            <td>@o.id_cli</td>
                                                            <td>@o.id_serv</td>
                                                            <td>@o.id_func</td>
                                                            <td>@o.id_cel</td>
                                                            <td>@o.data</td>
                                                            <td>@o.Valor_Total</td>
                                                            

                                                            <td class="btnAcoes">

                                                                <a href="~/Detalhe.cshtml">Visualizar</a>



                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                            </table>


                        </div>

                    </div>

                </div>

            </div>

        </div>

</body>
